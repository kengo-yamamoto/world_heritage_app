<div class="container">
    <div class="row">
        <div class="col-12">
            <%= search_form_for @search do |f| %>
            <div class="form-group">
                <%= f.label :item_name_cont, "世界遺産名を含む" %>
                <%= f.search_field :item_name_cont, placeholder: "検索ワード" %>
            </div>
            <div class="actions"><%= f.submit "検索" %></div>
            <% end %>
            <% @items.each do |item|%>
                <%= item.genre %><br />
                <%= item.country %><br />
                <%= item.item_name %><br />
                <%= link_to '詳しくはこちらへ', item_path(item.id) %>
            <% end %>
    </div>
</div>