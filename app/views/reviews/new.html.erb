<%= form_with model: @review, url: reviews_path do |f| %>
<div class="review-box">
  <div class="review-item">
  <!-- タイトル -->
  <div class="form-group">
    <%= f.label :title, 'タイトル ', class:'' %>
    <div class="col-md-9">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>

  <!-- 評価 -->
  <div class="form-group">
    <%= f.label :rate,'評価 ', class:'' %>
    <%= f.hidden_field :rate%>
  </div>

  <!-- 口コミ -->
  <div class="form-group">
    <%= f.label :body, '口コミ内容 ', class:'' %>
    <div class="col-md-9">
      <%= f.text_area :body, class: "form-control",rows: "8",placeholder:'口コミ内容がなくても、タイトルと評価のみで投稿できます。まずは投稿してみましょう！投稿してから編集もできますよ！' %>
    </div>
  </div>

  <!-- 確認ボタン -->
  <div class="form-group text-right">
    <div class="col-md-9">
      <%= f.submit 'レビューを投稿する', class:"btn btn-success" %>
    </div>
  </div>
  </div>
</div>

<% end %>